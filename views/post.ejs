<%- include("partials/header"); -%>

<h1 class="post-title"><%= post.title %></h1>
<p>Posted <%= post.formattedDate %></p>

<div class="post-description my-4">
    <%= post.description %>
</div>
<%- include("partials/messages"); -%>

<% if (typeof user != "undefined" && user.role === "admin") { %>
    <p>
        <a class="btn btn-sm btn-warning" href="/blog/admin/edit/<%= post.id %>">Edit</a>
        <button class="btn btn-sm btn-danger" data-toggle="modal" data-target="#delete-modal">Delete</button>
    </p>

    <!-- Modal -->
    <div class="modal" id="delete-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Post</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this post?</p>
                </div>
                <div class="modal-footer">
                    <a href="/blog/admin/delete/<%= post.id %>" class="btn btn-danger">Delete</a>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
<% } %>

<hr class="mt-3 mb-5">

<div class="post-content">
    <%- content -%>
</div>

<hr class="my-5">

<%- include("partials/comment"); -%>

<%- include("partials/footer"); -%>
